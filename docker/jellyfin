services:
  jellyfin:
    image: jellyfin/jellyfin
    container_name: jellyfin
    ports:
      - "8096:8096"
    security_opt:
      - no-new-privileges:true
    networks:
      - jellyfin_net
    volumes:
      - /home/surya/Docker/Jellyfin/config:/config
      - /home/surya/Docker/Jellyfin/cache:/cache
      - /mnt/Media/Movies:/media/movies:ro
      - /mnt/Media/Shows:/media/Shows:ro
    restart: unless-stopped
    environment:
      - TZ=America/Chicago
      - PUID=1000
      - PGID=1000
    devices:
      - /dev/dri/renderD128:/dev/dri/renderD128

networks:
  jellyfin_net:
    external: true
