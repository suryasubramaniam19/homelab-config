services:
  mc:
    image: itzg/minecraft-server:java21
    pull_policy: daily
    tty: true
    stdin_open: true
    security_opt:
      - no-new-privileges:true
    networks:
      - minecraft-server_net
    ports:
      - "25565:25565"
    environment:
      EULA: "TRUE"
      VERSION: "1.21.5"
      MEMORY: "3G"
      TYPE: "SPIGOT"
      VIEW_DISTANCE: "12"
    volumes:
      # attach the relative directory 'data' to the container's /data path
      - /home/surya/Docker/Minecraft-Server/data:/data

networks:
  minecraft-server_net:
    external: true
